<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
      <parameter key="ecommit_javascript.helper.jquery_helper.class">Ecommit\JavascriptBundle\Helper\JqueryHelper</parameter>
      <parameter key="ecommit_javascript.twig.jquery_extension.class">Ecommit\JavascriptBundle\Twig\JqueryExtension</parameter>
      <parameter key="ecommit_javascript.listener.class">Ecommit\JavascriptBundle\Listener\JavascriptListener</parameter>
      <parameter key="ecommit_javascript.form.type.jquerydatepicker.class">Ecommit\JavascriptBundle\Form\Type\JqueryDatePicker</parameter>
      <parameter key="ecommit_javascript.form.type.jqueryautocompleteentityajax.class">Ecommit\JavascriptBundle\Form\Type\JqueryAutocompleteEntityAjaxType</parameter>
      <parameter key="ecommit_javascript.form.type.tokeninputentitiesajax.class">Ecommit\JavascriptBundle\Form\Type\TokenInputEntitiesAjaxType</parameter>
      <parameter key="ecommit_javascript.form.type.tiny_mce.class">Ecommit\JavascriptBundle\Form\Type\TinyMCEType</parameter>
      <parameter key="ecommit_javascript.form.type.recaptcha.class">Ecommit\JavascriptBundle\Form\Type\RecaptchaType</parameter>
      <parameter key="ecommit_javascript.validator.constraints.recaptcha.class">Ecommit\JavascriptBundle\Validator\Constraints\RecaptchaValidator</parameter>
      <parameter key="ecommit_javascript.form.type.select2entityajax.class">Ecommit\JavascriptBundle\Form\Type\Select2\Select2EntityAjaxType</parameter>
      <parameter key="ecommit_javascript.form.type.select2entity.class">Ecommit\JavascriptBundle\Form\Type\Select2\Select2EntityType</parameter>
      <parameter key="ecommit_javascript.form.type.select2choice.class">Ecommit\JavascriptBundle\Form\Type\Select2\Select2ChoiceType</parameter>
  </parameters>

  <services>
    <service id="ecommit_javascript.helper.jquery_helper" class="%ecommit_javascript.helper.jquery_helper.class%">
        <argument type="service" id="ecommit_util.helper" />
    </service>

    <service id="ecommit_javascript.twig.jquery_extension" class="%ecommit_javascript.twig.jquery_extension.class%">
        <argument type="service" id="ecommit_javascript.helper.jquery_helper" />
        <tag name="twig.extension" />
    </service>

    <service id="ecommit_javascript.form.type.jquerydatepicker" class="%ecommit_javascript.form.type.jquerydatepicker.class%">
        <tag name="form.type" alias="ecommit_javascript_jquerydatepicker" />
    </service>

    <service id="ecommit_javascript.form.type.jqueryautocompleteentityajax" class="%ecommit_javascript.form.type.jqueryautocompleteentityajax.class%">
        <argument type="service" id="doctrine" on-invalid="null" />
        <argument type="service" id="router" />
        <tag name="form.type" alias="ecommit_javascript_jqueryautocompleteentityajax" />
    </service>

    <service id="ecommit_javascript.form.type.tokeninputentitiesajax" class="%ecommit_javascript.form.type.tokeninputentitiesajax.class%">
        <argument type="service" id="doctrine" on-invalid="null" />
        <argument type="service" id="router" />
        <tag name="form.type" alias="ecommit_javascript_tokeninputentitiesajax" />
    </service>

    <service id="ecommit_javascript.form.type.tiny_mce" class="%ecommit_javascript.form.type.tiny_mce.class%">
        <tag name="form.type" alias="ecommit_javascript_tinymce" />
    </service>

    <service id="ecommit_javascript.form.type.recaptcha" class="%ecommit_javascript.form.type.recaptcha.class%">
        <argument>%ecommit_javascript.recaptcha.public_key%</argument>
        <argument>%ecommit_javascript.recaptcha.secure%</argument>
        <argument>%ecommit_javascript.recaptcha.enable%</argument>
        <argument>%locale%</argument>
        <tag name="form.type" alias="ecommit_javascript_recaptcha" />
    </service>

    <service id="ecommit_javascript.validator.constraints.recaptcha" class="%ecommit_javascript.validator.constraints.recaptcha.class%">
        <argument type="service" id="request_stack" />
        <argument>%ecommit_javascript.recaptcha.private_key%</argument>
        <argument>%ecommit_javascript.recaptcha.enable%</argument>
        <tag name="validator.constraint_validator" alias="ecommit_javascript.validator.constraints.recaptcha" />
    </service>

    <service id="ecommit_javascript.form.type.select2entityajax" class="%ecommit_javascript.form.type.select2entityajax.class%">
      <argument type="service" id="doctrine" on-invalid="null" />
      <argument type="service" id="router" />
      <tag name="form.type" alias="ecommit_javascript_select2entityajax" />
    </service>

    <service id="ecommit_javascript.form.type.select2entity" class="%ecommit_javascript.form.type.select2entity.class%">
      <tag name="form.type" alias="ecommit_javascript_select2entity" />
    </service>

    <service id="ecommit_javascript.form.type.select2choice" class="%ecommit_javascript.form.type.select2choice.class%">
      <tag name="form.type" alias="ecommit_javascript_select2choice" />
    </service>

    <service id="ecommit_javascript.overlay.jquery_tools_overlay" class="Ecommit\JavascriptBundle\Overlay\JQueryToolsOverlay">
        <argument>%ecommit_javascript.use_bootstrap%</argument>
    </service>

    <service id="ecommit_javascript.overlay.jquery_popup_overlay" class="Ecommit\JavascriptBundle\Overlay\JQueryPopupOverlay">
        <argument>%ecommit_javascript.use_bootstrap%</argument>
    </service>
  </services>
</container>
